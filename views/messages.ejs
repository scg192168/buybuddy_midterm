<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BuyBuddy - Messages</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <%- include('partials/_header') %>
    <div class="container">
      <div class="container-left">
        <h1>Messages</h1>
      </div>
      <div class="container-right">
        <% messages.forEach((message) => { %>
        <div class="card">
          <div class="card-header">
            <h2 class="message-title">
              Message from <%= message.sender_username %>
            </h2>
            <span class="time"><%= message.send_date %></span>
          </div>
          <div class="card-body">
            <span class="user user-email"><%= message.sender_email %></span>
            <span>></span>
            <span class="message"><%= message.message_text %></span>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>